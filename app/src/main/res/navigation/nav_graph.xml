<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/itemStructureFragment">


    <activity
        android:id="@+id/mainPage"
        android:name="com.example.mystorage.ui.main.MainPage"
        android:label="MainPage"
        tools:layout="@layout/activity_main_page"
        />

    <fragment
        android:id="@+id/itemStructureFragment"
        android:name="com.example.mystorage.ui.item.structure.ItemStrFragment"
        android:label="ItemStructureFragment"
        app:enterAnim="@android:anim/fade_in"
        app:exitAnim="@android:anim/fade_out"
        tools:layout="@layout/fragment_item_str"
        />

    <fragment
        android:id="@+id/itemListFragment"
        android:name="com.example.mystorage.ui.item.list.ItemListFragment"
        android:label="ItemListFragment"
        app:enterAnim="@android:anim/fade_in"
        app:exitAnim="@android:anim/fade_out"
        tools:layout="@layout/fragment_item_list"
        />


</navigation>